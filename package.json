{
  "name": "@casandra/backend",
  "description": "Cassandra backend service stack",
  "author": "Casandra <https://casandra.ai>",
  "private": true,
  "license": "Commercial",
  "packageManager": "pnpm@10.20.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" = \"production\" ]; then echo 'skip prepare in production' ;else corepack enable && husky install && pnpm run prisma:generate; fi",
    "prebuild": "rimraf dist && pnpm run prisma:generate",
    "init": "pnpm run prisma:generate && pnpm run migrate:dev",
    "build": "pnpm -C \"apps/core\" run build",
    "dev": "pnpm -C \"apps/core\" run start",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write --no-error-on-unmatched-pattern \"apps/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "cross-env PRISMA_CLIENT_ENGINE_TYPE=library PRISMA_MIGRATE_SKIP_ADVISORY_LOCK=1 pnpm -C prisma exec prisma migrate reset --force",
    "test": "cross-env PRISMA_CLIENT_ENGINE_TYPE=library vitest run",
    "migrate:reset": "pnpm -C prisma run migrate:reset",
    "migrate:dev": "pnpm -C prisma run migrate:dev",
    "migrate:deploy": "pnpm -C prisma run migrate:deploy",
    "prisma:migrate:resolve": "pnpm -C prisma run prisma:migrate:resolve",
    "prisma:generate": "pnpm -C prisma run build",
    "start:prod": "cross-env NODE_ENV=production ENABLE_SWAGGER=true node apps/core/dist/main.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "@prisma/adapter-pg": "^7.0.0",
    "bcrypt": "5.1.1",
    "cross-env": "7.0.3",
    "lodash": "4.17.21",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "nestjs-i18n": "^10.6.0",
    "hbs": "^4.2.0"
  },
  "devDependencies": {
    "@innei/bump-version": "^1.5.10",
    "@innei/eslint-config-ts": "^0.12.0",
    "@innei/prettier": "^0.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "@nestjs/cli": "11.0.12",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.9",
    "@swc/cli": "0.1.63",
    "@types/bcrypt": "5.0.2",
    "@types/lodash": "4.14.202",
    "@types/node": "24.10.1",
    "dayjs": "1.11.10",
    "dotenv-cli": "7.3.0",
    "eslint": "^8.55.0",
    "husky": "8.0.3",
    "ioredis": "^5.3.2",
    "lint-staged": "15.2.0",
    "prettier": "3.1.0",
    "redis-memory-server": "0.10.0",
    "rimraf": "5.0.5",
    "snakecase-keys": "5.5.0",
    "ts-loader": "9.5.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "1.4.4",
    "vite": "5.0.7",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "1.0.2",
    "zod": "4.1.12",
    "zod-fixture": "2.5.1",
    "zx": "7.2.3"
  },
  "resolutions": {
    "pino": "./external/pino",
    "*>typescript": "^5.2.2",
    "*>lodash": "4.17.21",
    "*>zod": "4.1.12"
  },
  "pnpm": {
    "overrides": {
      "zeptomatch": "file:external/zeptomatch"
    }
  },
  "redisMemoryServer": {
    "downloadDir": "./tmp/redis/binaries",
    "version": "6.0.10",
    "disablePostinstall": "1",
    "systemBinary": "/opt/homebrew/bin/redis-server"
  }
}