{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strictNullChecks": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@core": [
        "./apps/core/src"
      ],
      "@core/*": [
        "./apps/core/src/*"
      ],
      "@shared/contracts": ["./packages/shared-contracts/src"],
      "@shared/contracts/*": ["./packages/shared-contracts/src/*"],
      "@test": [
        "./test"
      ],
      "@test/*": [
        "./test/*"
      ],
      "@db/client": ["./prisma"],
      "@db/client/*": ["./prisma/*"]
    },
  },
  "exclude": [
    "dist",
    "tmp",
    "prisma/zod"
  ]
}